<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@android:id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp" />

    <Spinner
        android:id="@+id/resampler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@android:id/message"
        android:layout_alignParentStart="true"
        android:padding="16dp" />

    <Spinner
        android:id="@+id/dithering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/resampler"
        android:layout_alignParentStart="true"
        android:padding="16dp" />

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dithering"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:labelFor="@id/param1"
            android:text="@string/pref_audio_resampler_cutoff"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <EditText
            android:id="@+id/cutoff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/resampler_cutoff_hint"
            android:inputType="numberDecimal" />

    </TableRow>

</RelativeLayout>
